#!/bin/bash

#Run this after you configure firewall setting in vpnKillSwitch/vpn-kill-switch.sh
#Enable vpnKillSwitch firewall at boot:

chown $USER:$USER *.sh

chmod 0644 systemd/vpnKillSwitch.service
chmod 744 vpnKillSwitch/*
cp systemd/vpnKillSwitch.service /etc/systemd/system
cp -R vpnKillSwitch /etc/
systemctl daemon-reload
systemctl enable vpnKillSwitch.service

# If you want to disable ipv6, uncomment commands below:
# echo 'net.ipv6.conf.all.disable_ipv6=1' | sudo tee -a /etc/sysctl.conf
# echo 'net.ipv6.conf.default.disable_ipv6=1' | sudo tee -a /etc/sysctl.conf
# echo 'net.ipv6.conf.lo.disable_ipv6=1' | sudo tee -a /etc/sysctl.conf
# sudo sysctl -p

